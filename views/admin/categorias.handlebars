<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            
            <div class="d-flex justify-content-between align-items-center mt-2">
                <div>
                    <small>Data de criação: {{date}}</small>
                </div>
            
                <div class="d-flex gap-2">
                    <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success">Editar Categoria</button></a>
                    <form action="/admin/categorias/deletar" method="post">
                        <input type="hidden" name="id" value="{{_id}}">
                        <button type="submit" class="btn btn-danger">Deletar</button>
                    </form>                
                </div>  
            </div>
                      
        </div>
    </div>
{{else}}

    <h4 class="mt-3">Nenhuma categoria registrada</h4>

{{/each}}